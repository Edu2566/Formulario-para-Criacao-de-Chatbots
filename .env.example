SECRET_KEY=change-me

# URL completa usada pelo SQLAlchemy (ajusta usuário/senha/host/porta conforme necessário)
MYSQL_DATABASE_URL=mysql://chatbot:chatbotpass@db:3306/chatbots

# Variáveis usadas pelo docker-compose para criar o container do MySQL
MYSQL_DB=chatbots
MYSQL_USER=chatbot
MYSQL_PASSWORD=chatbotpass
MYSQL_ROOT_PASSWORD=rootpass
MYSQL_HOST=db
MYSQL_PORT=3306

# Porta usada pelo Flask dentro do container
FLASK_RUN_PORT=5000
